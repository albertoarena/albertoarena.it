---
import type { CollectionEntry } from "astro:content";

interface Props {
    post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---

<article class="group border-l-2 border-transparent hover:border-l-primary pl-5 transition-all duration-200">
    <a href={`/posts/${post.slug}/`} class="block space-y-1">
        {post.data.cover && (
                <img
                        src={post.data.cover.startsWith("http")
                            ? post.data.cover
                            : `/images/posts/${post.data.cover}`}
                        alt={post.data.title}
                        class="rounded-lg mb-3 w-full aspect-[16/9] object-cover transition-transform duration-300 group-hover:scale-[1.02]"
                        loading="lazy"
                />
        )}

        <div class="flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400">
            <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                })}
            </time>
            {post.data.category && (
                <>
                    <span aria-hidden="true" class="text-gray-300 dark:text-gray-600">/</span>
                    <span>{post.data.category}</span>
                </>
            )}
        </div>

        <h2 class="text-2xl font-semibold group-hover:text-primary transition-colors text-dark dark:text-white">
            {post.data.title}
        </h2>

        {post.data.description && (
                <p class="text-gray mt-1 line-clamp-2">
                    {post.data.description}
                </p>
        )}
    </a>
</article>