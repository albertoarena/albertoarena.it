---
import type { CollectionEntry } from "astro:content";

interface Props {
    post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
---

<article class="group">
    <a href={`/posts/${post.slug}/`} class="block space-y-1">
        {post.data.cover && (
                <img
                        src={post.data.cover.startsWith("http")
                            ? post.data.cover
                            : `/images/posts/${post.data.cover}`}
                        alt={post.data.title}
                        class="rounded-lg mb-3 w-full aspect-[16/9] object-cover transition-transform duration-300 group-hover:scale-[1.02]"
                        loading="lazy"
                />
        )}

        <h2 class="text-2xl font-semibold group-hover:text-blue-600 transition-colors">
            {post.data.title}
        </h2>

        <p class="text-sm text-gray-500">
            {post.data.date.toLocaleDateString("en-US", {
                year: "numeric",
                month: "short",
                day: "numeric",
            })}
        </p>

        {post.data.description && (
                <p class="text-gray-700 dark:text-gray-300 mt-1 line-clamp-2">
                    {post.data.description}
                </p>
        )}
    </a>
</article>