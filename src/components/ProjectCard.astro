---
import type { Project } from '../data/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;

const statusStyles: Record<string, { label: string; classes: string }> = {
  active: {
    label: 'Active',
    classes:
      'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300',
  },
  maintained: {
    label: 'Maintained',
    classes:
      'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300',
  },
  archived: {
    label: 'Archived',
    classes:
      'bg-gray-100 text-gray-600 dark:bg-gray-800/30 dark:text-gray-400',
  },
  professional: {
    label: 'Professional',
    classes:
      'bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-300',
  },
};

const status = statusStyles[project.status];
---

<article
  class:list={[
    'rounded-lg border border-white-cloud dark:border-dark-cloud p-5 transition-colors hover:border-primary/50 dark:hover:border-primary/50',
    project.featured &&
      'border-l-4 border-l-primary dark:border-l-primary',
  ]}
>
  <div class="flex items-start justify-between gap-4 mb-3">
    <h3 class="text-xl font-semibold text-dark dark:text-white">
      {project.url ? (
        <a
          href={project.url}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-primary transition-colors"
        >
          {project.name}
          <svg
            class="inline w-3.5 h-3.5 ml-1 opacity-50"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            />
          </svg>
        </a>
      ) : (
        project.name
      )}
    </h3>
    <span
      class:list={[
        'text-xs font-medium px-2 py-0.5 rounded-full whitespace-nowrap',
        status.classes,
      ]}
    >
      {status.label}
    </span>
  </div>

  <p class="text-gray leading-relaxed mb-4">{project.description}</p>

  <div class="flex flex-wrap items-center gap-2 mb-4">
    {project.tech.map((t) => (
      <span class="text-xs px-2 py-0.5 bg-gray-100 dark:bg-dark-cloud text-gray-700 dark:text-gray-300 rounded">
        {t}
      </span>
    ))}
  </div>

  <div class="flex flex-wrap items-center gap-4 text-sm">
    {project.github && (
      <a
        href={project.github}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 text-gray hover:text-primary transition-colors"
      >
        <svg
          class="w-4 h-4"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"
          />
        </svg>
        Source
      </a>
    )}
    {project.url && (
      <a
        href={project.url}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 text-gray hover:text-primary transition-colors"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
          />
        </svg>
        Website
      </a>
    )}
    {project.postSlug && (
      <a
        href={`/posts/${project.postSlug}/`}
        class="inline-flex items-center gap-1.5 text-gray hover:text-primary transition-colors"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
          />
        </svg>
        Blog post
      </a>
    )}
    <span class="ml-auto text-xs text-gray">{project.year}</span>
  </div>
</article>
